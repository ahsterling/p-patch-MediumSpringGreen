<div  class="panel panel-success" id="home">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to "Tools", "/tools"  %></h3>
  </div>

  <table class="table table-hover">
    <% @tools.each do |tool| %>
      <tr>
        <td><%= link_to tool.name, tool_path(tool.id) %></td>
        <td><%= tool.status %></td>
      </tr>
    <% end %>
  </table>


</div>
