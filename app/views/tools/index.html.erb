
<h3>Currently available tools:</h3>
<table class="table table-striped">
  <tr>
    <th>Tool Name</th>
    <th>Status</th>
    <th>Check Out</th>
  </tr>
  <% @available_tools.each do |tool| %>
    <tr>
      <td><%= tool.name %></td>
      <td><%= tool.status %></td>
      <td><%= button_to "Check me out!", tool_path(tool.id), method: :put, class: "btn btn-info", params: {status: "out"} %></td>
    </tr>
  <% end %>
</table>

<h3>Unavailable tools</h3>
<table class="table table-striped">
  <tr>
    <th>Tool Name</th>
    <th>Status</th>
    <th>Checked out to:</th>
  </tr>
  <% @unavailable_tools.each do |tool| %>
    <tr>
      <td><%= tool.name %></td>
      <td><%= tool.status %></td>
      <td><%= tool.user_id %></td>
    </tr>
  <% end %>
</table>
