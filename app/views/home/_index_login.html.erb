              <%= f.text_field :name, placeholder: "Name" %>
            </div>

            <div class = "login_field">
              <%= f.password_field :password, placeholder: "Password" %>
            </div>

            <div class = "login_field" >
              <%= f.submit "Login" %>
            </div>

          <% end %>
        </li>

        <li>
          <div class = "login_field twitter-button">
            <p><%= link_to image_tag("twitter_signin.png"),
            "/auth/twitter"  %></p>
          </div>
        </li>

        <li>
          <div class ="new_account">
            <%= link_to "Create a new account",
            users_path,
            class: "btn btn-sm btn-primary" %>

          </div>


        </li>
        <% end %>
        <li>
          <div class="weather-bar">
            <%= render "home/weather" %>
