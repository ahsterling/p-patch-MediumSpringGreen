<div  class="panel panel-success" id="home">
  <div class="panel-heading">
    <h3 class="panel-title">Edit <%= @event.title %></h3></div>

    <table class="table table-hover">
      <%= bootstrap_form_for @event do |f| %>
      <tr>
        <td>
          <%= f.text_field :title, label: "Title" %>
        </td>
        <td><%= f.text_area :content, label: "Description" %></td>
        <td><%= f.submit %></td>

          <% end %>
        </td>
      </tr>


    </table>

  </div>
